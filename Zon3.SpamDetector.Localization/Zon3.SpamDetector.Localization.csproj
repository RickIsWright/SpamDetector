<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <NoWarn>$(NoWarn);1591</NoWarn>
    <Description>Localization for the SpamDetector manager panel</Description>
	<VersionPrefix>1.3.1</VersionPrefix>
    <VersionSuffix>beta</VersionSuffix>
	<GeneratePackageOnBuild>False</GeneratePackageOnBuild>
	<Authors>Jens Bråkenhielm</Authors>
	<Copyright>Copyright 2020-2021 (c) Jens Bråkenhielm</Copyright>
  </PropertyGroup>

  <PropertyGroup Condition="'$(GITHUB_ACTIONS)' == 'true'">
    <ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Localization" Version="5.0.1" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="all" />
  </ItemGroup>

</Project>
